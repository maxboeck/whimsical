{% if post %}
<div class="post">
    {% if post.data.image %}
    <figure class="post__figure">
        <a href="{{ post.data.url }}" class="post__imagelink" tabindex="-1">
            <img src="/assets/images/screenshots/{{ post.data.image }}" class="post__image" width="640" height="360" loading="lazy" alt="" />
        </a>
        <figcaption class="post__content">
            {{ post.templateContent | safe }}
        </figcaption>
    </figure>
    {% else %}
    <div class="post__content">
        {{ post.templateContent | safe }}
    </div>
    {% endif %}
    <div class="post__meta">
        <a href="{{ post.data.url }}" class="post__link">
            {% icon "arrow-right" %}
            {{ post.data.title }}
        </a>
        {% if post.data.twitter %}
            <a href="https://twitter.com/{{ post.data.twitter }}" class="post__link">
                {% icon "twitter" %}
                {{ post.data.twitter }}
            </a>
        {% endif %}
    </div>
</div>
{% endif %}